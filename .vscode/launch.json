    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Django - migrate - local",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}\\manage.py",
            "args": [
                "migrate",
                "--settings=hi_story.settings.local"
            ],
            "django": true,
            "justMyCode": true
        },
        {
            "name": "Python: Django - make migrations",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}\\manage.py",
            "args": [
                "makemigrations"
            ],
            "django": true,
            "justMyCode": true
        },
        {
            "name": "Python: Django - local db",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}\\manage.py",
            "args": [
                "runserver",
                "--settings=hi_story.settings.local"
            ],
            "django": true,
            "justMyCode": true
        }
    ]
}